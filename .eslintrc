{
    "root": true,
    "rules": {
        "indent": [
            2,
            4
        ],
        "quotes": [
            1,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-unused-vars": [
            1,
            {
                "vars": "all",
                "args": "none"
            }
        ],
        "no-console": [
            0
        ],
        "no-redeclare": 1,
        "no-constant-condition": 1,
        "no-eval": 2,
        "eqeqeq": [
            2
        ],
        "space-before-function-paren": [
            2,
            {
                "anonymous": "always",
                "named": "never"
            }
        ],
        "space-return-throw-case": [
            2
        ],
        "space-infix-ops": [
            2,
            {
                "int32Hint": false
            }
        ],
        "space-in-parens": [
            2,
            "never"
        ],
        "space-before-blocks": [
            2,
            "always"
        ],
        "space-after-keywords": [
            2,
            "always"
        ],
        "default-case": [
            1
        ],
        "no-extra-bind": [
            1
        ],
        "no-trailing-spaces": [
            2
        ],
        "no-mixed-spaces-and-tabs": [
            2
        ],
        "key-spacing": [
            2,
            {
                "beforeColon": false,
                "afterColon": true
            }
        ],
        "no-func-assign": [
            2
        ],
        "no-negated-in-lhs": [
            2
        ],
        "no-redeclare": [
            2
        ],
        "no-unused-expressions": [
            2
        ],
        "dot-notation": [
            2
        ],
        "eol-last": [
            2
        ]
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "ecmaFeatures": {
        "templateStrings": false
    },
    "plugins": [
        "json"
    ],
    "extends": "eslint:recommended",
}
